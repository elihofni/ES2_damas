<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TelaInicial_modos"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_JxJ"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        android:elevation="3dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador VS Jogador"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_JxPC"
        card_view:cardBackgroundColor="@color/colorAccent"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        android:elevation="3dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador VS IA"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </android.support.v7.widget.CardView>

</LinearLayout>