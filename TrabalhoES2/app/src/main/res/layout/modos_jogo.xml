<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TelaInicial_modos"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_JxJ"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        android:elevation="3dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/jog_vs_jog"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador VS Jogador"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_JxIA1"
        card_view:cardBackgroundColor="@color/colorRoxo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        android:elevation="3dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/jog_vs_ia3"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador VS Sindicatos"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_JxIA2"
        card_view:cardBackgroundColor="@color/colorAmarelo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        android:elevation="3dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/jog_vs_ia2"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador VS Congresso"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_JxIA3"
        card_view:cardBackgroundColor="@color/colorAccent"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        android:elevation="3dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/jog_vs_ia4"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador VS Justiça STF"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_IAxIA"
        card_view:cardBackgroundColor="@color/colorAccent"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        android:elevation="3dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/ia_vs_ia"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congresso VS Justiça STF"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp" />
    </android.support.v7.widget.CardView>

</LinearLayout>