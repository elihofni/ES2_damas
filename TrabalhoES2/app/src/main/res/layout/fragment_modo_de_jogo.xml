<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context="com.example.max.trabalhoes2.Interface.Fragment.ModoDeJogoFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/TelaInicial_modo_JxIA1"
        card_view:cardBackgroundColor="@color/colorRoxo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp">

        <ImageView
            android:id="@+id/imagem_fundo_modo_de_jogo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/jog_vs_ia3"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:id="@+id/titulo_modo_de_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogador VS Sindicatos"
            android:textAppearance="@style/TituloModoJogo"
            android:layout_gravity="bottom|center"
            android:layout_margin="10dp" />
    </android.support.v7.widget.CardView>

</FrameLayout>
